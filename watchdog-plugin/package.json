{
	"name": "@obsidian-plugins/watchdog-plugin",
	"version": "1.0.0",
	"description": "Abstract Obsidian plugin base for path mapping and content rendering",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"typecheck": "tsc -noEmit"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"abstract",
		"watchdog",
		"path-mapping"
	],
	"dependencies": {
		"obsidian": "latest",
		"tslib": "^2.8.1",
		"utils": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.0.0",
		"vitest": "^2.1.9",
		"jsdom": "^25.0.1"
	},
	"nx": {
		"sourceRoot": "libs/watchdog-plugin/src",
		"targets": {
			"build": {
				"executor": "nx:run-commands",
				"options": {
					"command": "pnpm build",
					"cwd": "{projectRoot}"
				}
			},
			"dev": {
				"executor": "nx:run-commands",
				"options": {
					"command": "pnpm dev",
					"cwd": "{projectRoot}"
				}
			},
			"test": {
				"executor": "nx:run-commands",
				"options": {
					"command": "pnpm test",
					"cwd": "{projectRoot}"
				}
			},
			"test:watch": {
				"executor": "nx:run-commands",
				"options": {
					"command": "pnpm test:watch",
					"cwd": "{projectRoot}"
				}
			},
			"typecheck": {
				"executor": "nx:run-commands",
				"options": {
					"command": "pnpm typecheck",
					"cwd": "{projectRoot}"
				}
			},
			"clean": {
				"executor": "nx:run-commands",
				"options": {
					"command": "pnpm clean",
					"cwd": "{projectRoot}"
				}
			}
		},
		"tags": [
			"type:lib",
			"scope:shared"
		]
	}
}
